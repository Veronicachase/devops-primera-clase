pipeline {
    agent any
    tools {
        nodejs "nodejs-18"
    }

    triggers {
        githubPush()
    }
    
    stages {
        stage('install dependencies') {
            steps {
                echo 'Installing...'
                sh 'npm install'
            }
        }
        stage('Run test') {
            steps {
                echo 'Running test...'
                sh 'npm run test'
            }
        }
    }

    post {
        success {
            echo 'Todo fue bien'
        }
        failure {
            echo 'Hubo un error'
        }
        always {
            echo 'Pipeline finished'
        }
    }
}
